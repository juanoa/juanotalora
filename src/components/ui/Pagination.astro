---
// Minimalist Pagination component for Starlight
// Access the current route data to determine pagination state
const { pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination;

// Type the pagination links properly
interface PaginationLink {
  href: string;
  label: string;
}

const prevLink = prev as PaginationLink | undefined;
const nextLink = next as PaginationLink | undefined;
---

<nav class="pagination" aria-label="Navegación de páginas">
  {
    prevLink && (
      <a
        href={prevLink.href}
        class="pagination-link pagination-prev"
        rel="prev"
      >
        ← {prevLink.label}
      </a>
    )
  }

  {
    nextLink && (
      <a
        href={nextLink.href}
        class="pagination-link pagination-next"
        rel="next"
      >
        {nextLink.label} →
      </a>
    )
  }
</nav>

<style>
  .pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .pagination-link {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .pagination-link:hover {
    background-color: var(--sl-color-gray-6);
    color: var(--sl-color-text);
    text-decoration: none;
  }

  .pagination-prev {
    margin-right: auto;
  }

  .pagination-next {
    margin-left: auto;
  }

  /* When only one link is present, center it */
  .pagination:has(.pagination-prev:only-child),
  .pagination:has(.pagination-next:only-child) {
    justify-content: center;
  }

  .pagination:has(.pagination-prev:only-child) .pagination-prev,
  .pagination:has(.pagination-next:only-child) .pagination-next {
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .pagination {
      flex-direction: column;
      gap: 1rem;
    }

    .pagination-prev,
    .pagination-next {
      margin: 0;
      width: 100%;
      justify-content: center;
    }

    /* En móvil: next arriba, prev abajo */
    .pagination-next {
      order: -1;
    }

    .pagination-prev {
      order: 1;
    }
  }
</style>
